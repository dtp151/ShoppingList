<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="pl.karolmichalski.shoppinglist.presentation.screens.main.MainViewModel" />

        <variable
            name="listener"
            type="pl.karolmichalski.shoppinglist.presentation.screens.main.MainListener" />

        <variable
            name="onRefreshListener"
            type="androidx.swiperefreshlayout.widget.SwipeRefreshLayout.OnRefreshListener" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.screens.main.MainActivity">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:isRefreshing="@{viewModel.isRefreshing}"
            app:onRefreshListener="@{onRefreshListener}">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:onItemClick="@{listener.onProductClick()}"
                app:productList="@{viewModel.productList}"
                app:reverseLayout="true"
                app:stackFromEnd="true"
                tools:listitem="@layout/item_product" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="10dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            tools:targetApi="lollipop">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/enter_product_name"
                android:importantForAutofill="no"
                android:inputType="textCapSentences"
                android:text="@={viewModel.newProductName}"
                tools:targetApi="o" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->listener.onAddBtnClick()}"
                android:text="@string/add" />

        </LinearLayout>

    </LinearLayout>

</layout>